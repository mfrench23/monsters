<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<%= page_entries_info books %>

<table>
  <thead>
    <tr>
      <th><%= sortable "books.name", Book, params, "Name" %></th>
      <th><%= sortable "books.abbreviation", Book, params, "Abbreviation" %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= book.abbreviation %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate books %>
<%= link_to 'New Book', new_book_path %>
