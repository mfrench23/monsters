<table id="fullstatblock">
  <tr>
    <td id="statblock">
      <strong>ST:</strong> <%= monster.characteristic_score "ST" %>
    </td id="statblock">
    <td id="statblock"><strong>Hitpoints:</strong> <%= monster.characteristic_score "HP" %></td>
    <td id="statblock"><strong>Speed:</strong> <%= monster.speed %></td>
  </tr>
  <tr>
    <td id="statblock">
      <strong>DX:</strong> <%= monster.characteristic_score "DX" %>
    </td id="statblock">
    <td id="statblock"><strong>Will:</strong> <%= monster.characteristic_score "Will" %></td>
    <td id="statblock">
      <strong>Move:</strong>
      <% monster.movement_rates.each do |mv| %>
	<%= mv.rate %><%= mv.enhanced_rate.nil? ? "" : "/" + mv.enhanced_rate.to_s %> (<%= mv.move_type_name %>)<br>
      <% end %>
    </td>
  </tr>
  <tr>
    <td id="statblock">
      <strong>IQ:</strong> <%= monster.characteristic_score "IQ" %>
    </td>
    <td id="statblock"><strong>Perception:</strong> <%= monster.characteristic_score "Per" %></td>
    <td id="statblock">
      <strong>SM:</strong> <%= monster.characteristic_score "SM" %>
      <% if monster.height.to_s.length > 0 %>
	<br>
	<strong>Height:</strong> <%= monster.height %>
      <% end %>
      <% if monster.weight.to_s.length > 0 %>
	<br>
	<strong>Weight:</strong> <%= monster.weight %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td id="statblock">
      <strong>HT:</strong> <%= monster.characteristic_score "HT" %>
    </td>
    <td id="statblock"><strong>Fatigue:</strong> <%= monster.characteristic_score "Fatigue" %></td>
    <td id="statblock">

    </td>
  </tr>
  <tr>
    <td id="statblock"><strong>Dodge:</strong> <%= monster.dodge %></td>
    <td id="statblock">
      <strong>Parry:</strong>
	<% monster.parry_scores.each do |parry| %>
	  <%= parry.weapon %> <%= parry.parry %> <br>
	<% end %>
      <br>
      <% if ! monster.block.nil? %>
	<strong>Block:</strong> <%= monster.block %>
      <% end %>
    </td>
    <td id="statblock">
      <strong>DR:</strong>
	<% monster.damage_resistances.each do |dr| %>
	  <%= simpleDR dr %> <br>
	<% end %>
    </td>
  </tr>
</table>
  