<p id="notice"><%= notice %></p>
<h1>
  <%= @monster.name %>
</h1>

<p>
  <strong>Aliases:</strong>
  <%= simpleMonsterNames @monster %>
</p>

<p>
  <strong>Class:</strong>
  <%= @class %>
</p>

<p>
  <strong>Description:</strong>
  <%= @monster.description %>
</p>

<%= render 'show_stat_block', monster: @monster %>

<table>
  <tr>
    <td><strong>Attacks:</strong></td>
    <td>
      <ul>
	<% @monster.attacks.each do |attack| %>
	  <li> <strong><%= attack.name %> (<%= attack.skill %>)</strong> <%= attack.description %>
	<% end %>
      </ul>
    </td>
  </tr>
  <tr>
    <td><strong>Traits:</strong></td>
    <td>
      <%= @monster.traits.collect { |x| simpleTrait x }.sort().join('; ') %>
    </td>
  </tr>
  <tr>
    <td><strong>Skills:</strong></td>
    <td>
      <% @monster.skills.each do |skill| %>
	<%= simpleSkill skill %> <br>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><strong>Gear:</strong></td>
    <td>
      <%= @monster.gear %>
    </td>
  </tr>

  <tr>
    <td><strong>Notes:</strong></td>
    <td>
      <%= @monster.notes %>
    </td>
  </tr>

  <tr>
    <td><strong>Sources:</strong></td>
    <td>
      <% @monster.page_references.each do |pg| %>
	<%= Book.find(pg.book_id).name %> p.<%= pg.pages %> <br>
      <% end %>
    </td>
  </tr>
</table>


<%= link_to 'Edit', edit_monster_path(@monster) %> |
<%= link_to 'Back', monsters_path %>
