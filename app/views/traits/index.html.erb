<p id="notice"><%= notice %></p>

<h1>Listing Traits</h1>

<table>
  <thead>
    <tr>
      <th>Monster</th>
      <th>Name</th>
      <th>Description</th>
      <th>Is feature</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @traits.each do |trait| %>
      <tr>
        <td><%= trait.monster %></td>
        <td><%= trait.name %></td>
        <td><%= trait.description %></td>
        <td><%= trait.is_feature %></td>
        <td><%= trait.level %></td>
        <td><%= link_to 'Show', trait %></td>
        <td><%= link_to 'Edit', edit_trait_path(trait) %></td>
        <td><%= link_to 'Destroy', trait, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

