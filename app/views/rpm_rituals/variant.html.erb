<h1>Variant Rpm Ritual</h1>

<%= render 'show', rpm_ritual: rpm_ritual %>


<%= form_for(RpmRitualVariant.from_ritual(rpm_ritual)) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :size => 40 %>
    <%= f.hidden_field :rpm_ritual_id %>
  </div>

  <%= render 'expanding_fieldset', f: f,
    id: "rpm_ritual_variant_modifiers", collection: :rpm_ritual_variant_modifiers,
    partial: 'rpm_ritual_variant_modifier_fields', label: 'add modifier', header: "Spell Modifiers",
    header_list: [ :modifier, :subtype, :level, :notes, :enhancements ],
    locals: {rpm_modifiers: rpm_modifiers, rpm_modifier_levels_accepting_enhancements: rpm_modifier_levels_accepting_enhancements} %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<div style="padding-top: 15px;">
	<%= link_to 'Show', rpm_ritual %> |
	<%= link_to 'Index', rpm_rituals_path %>
</div>