<p id="notice"><%= notice %></p>

<h1>Listing Damage Resistances</h1>

<table>
  <thead>
    <tr>
      <th>Monster</th>
      <th>Location</th>
      <th>Dr</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @damage_resistances.each do |damage_resistance| %>
      <tr>
        <td><%= damage_resistance.monster %></td>
        <td><%= damage_resistance.location %></td>
        <td><%= damage_resistance.dr %></td>
        <td><%= damage_resistance.notes %></td>
        <td><%= link_to 'Show', damage_resistance %></td>
        <td><%= link_to 'Edit', edit_damage_resistance_path(damage_resistance) %></td>
        <td><%= link_to 'Destroy', damage_resistance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

