<p id="notice"><%= notice %></p>

<h1>Listing Movement Rates</h1>

<table>
  <thead>
    <tr>
      <th>Monster</th>
      <th>Terrain type</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movement_rates.each do |movement_rate| %>
      <tr>
        <td><%= movement_rate.monster %></td>
        <td><%= movement_rate.terrain_type %></td>
        <td><%= movement_rate.rate %></td>
        <td><%= link_to 'Show', movement_rate %></td>
        <td><%= link_to 'Edit', edit_movement_rate_path(movement_rate) %></td>
        <td><%= link_to 'Destroy', movement_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

