<p id="notice"><%= notice %></p>

<h1>Listing Equipment Modifier Categories</h1>

<%= page_entries_info equipment_modifier_categories %>

<table>
  <thead>
    <tr>
      <th><%= sortable "equipment_modifier_categories.name", EquipmentModifierCategory, filter_params, "Name" %></th>
      <th><%= sortable "equipment_modifier_supercategories.name", EquipmentModifierCategory, filter_params, "Super-Category" %></th>
      <th>Notes</th>
      <%= render 'index_edit_destroy_headers' %>
    </tr>
  </thead>

  <tbody>
    <% equipment_modifier_categories.each do |equipment_modifier_category| %>
      <tr>
        <td><%= link_to equipment_modifier_category.name, equipment_modifier_category, :class => "quiet" %></td>
        <td>
          <% if equipment_modifier_category.equipment_modifier_supercategory %>
            <%= link_to equipment_modifier_category.equipment_modifier_supercategory, equipment_modifier_category.equipment_modifier_supercategory, :class => "quiet" %>
          <% end %>
        </td>
        <td><%= equipment_modifier_category.notes %></td>
        <%= edit_destroy_links equipment_modifier_category %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate equipment_modifier_categories %>

<%= link_to 'New Equipment modifier category', new_equipment_modifier_category_path %>
