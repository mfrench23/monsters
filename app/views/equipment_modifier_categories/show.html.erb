<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= equipment_modifier_category.name %>
</p>

<p>
  <strong>Super-Category:</strong>
  <%= "n/a" unless equipment_modifier_category.equipment_modifier_supercategory_id.present? %>
  <%= link_to equipment_modifier_category.equipment_modifier_supercategory, equipment_modifier_category.equipment_modifier_supercategory, :class => "quiet" if equipment_modifier_category.equipment_modifier_supercategory_id.present? %>
</p>

<p>
  <span class="field-label show">Modifiers:</span>
  <%= render "boxed_list", list: equipment_modifier_category.equipment_modifiers.order_by_name, row_style_display: "" %>
</p>

<div class="field">
  <span class="field-label show">Modifying</span>
  <%= render "boxed_list", list: equipment_modifier_category.equipment_types.order_by_name %>
</div>

<% if equipment_modifier_category.notes? %>
  <p>
    <strong>Notes:</strong>
    <%= equipment_modifier_category.notes %>
  </p>
<% end %>

