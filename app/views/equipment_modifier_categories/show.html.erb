<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= equipment_modifier_category.name %>
</p>

<p>
  <strong>Modifiers:</strong>
  <ul>
  <% equipment_modifier_category.equipment_modifiers.each do |equipment_modifier| %>
    <li><%= link_to equipment_modifier.to_s, equipment_modifier, :class => "quiet" %></li>
  <% end %>
  </ul>
</p>

<p>
  <strong>Notes:</strong>
  <%= equipment_modifier_category.notes %>
</p>

<div class="field">
  <span class="field-label show">Modifying</span>
  <%= render "boxed_list", list: equipment_modifier_category.equipment_types %>
</div>

<%= link_to 'Edit', edit_equipment_modifier_category_path(equipment_modifier_category) %> |
<%= link_to 'Index', equipment_modifier_categories_path %>
