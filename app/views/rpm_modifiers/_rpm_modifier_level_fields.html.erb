<li class="control-group nested-fields">
  <div class="controls">
    <%= f.text_field :description, :size => 50 %>
  </div>

  <div class="controls">
    <%= f.number_field :cost %>
  </div>

  <div class="controls" style="width: 75px;">
    <%= f.check_box :include_notes_in_summary %>
  </div>

  <div class="controls" style="width: 75px;">
    <%= f.check_box :accepts_enhancements %>
  </div>

  <div class="controls">
    <%= link_to_remove_association "remove", f %>
  </div>
</li>
