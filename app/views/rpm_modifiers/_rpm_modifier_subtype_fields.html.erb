<li class="control-group nested-fields">
  <div class="controls">
    <%= f.text_field :name, :size => 50 %>
  </div>

  <div class="controls">
    <%= f.number_field :multiplier, :min => 0, :max => 100.0, :step => 0.25 %>
  </div>

  <div class="controls">
    <%= link_to_remove_association "remove", f %>
  </div>
</li>
