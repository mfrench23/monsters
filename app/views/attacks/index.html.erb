<p id="notice"><%= notice %></p>

<h1>Listing Attacks</h1>

<table>
  <thead>
    <tr>
      <th>Monster</th>
      <th>Name</th>
      <th>Skill</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attacks.each do |attack| %>
      <tr>
        <td><%= attack.monster %></td>
        <td><%= attack.name %></td>
        <td><%= attack.skill %></td>
        <td><%= attack.description %></td>
        <td><%= link_to 'Show', attack %></td>
        <td><%= link_to 'Edit', edit_attack_path(attack) %></td>
        <td><%= link_to 'Destroy', attack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

