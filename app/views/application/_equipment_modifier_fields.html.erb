<li class="control-group nested-fields">
  <div class="controls">
    <%= f.text_field :name, :size => 20 %>
  </div>

  <div class="controls">
    <%= f.text_field :base_cost_mod, :size => 8 %>
  </div>

  <div class="controls">
    <%= f.text_field :base_weight_mod, :size => 8 %>
  </div>

  <div class="controls">
    <%= f.text_field :cost_mod, :size => 8 %>
  </div>

  <div class="controls">
    <%= f.text_field :weight_mod, :size => 8 %>
  </div>

  <div class="controls">
    <%= f.select :random_weight, (1..30) %>
  </div>

  <div class="controls">
    <%= f.text_area :notes, :size => "25x2" %>
  </div>

  <div class="controls">
    <%= link_to_remove_association "remove", f %>
  </div>
</li>
