<h1>Merging Equipment Categories</h1>

<%= form_tag(controller: "equipment_categories", action: "do_merge_into", method: "post") do |f| %>
  <div style="display: table-row">
    <div style="display: table-cell; border: 1px solid black; padding: 3px; width: 40%">
      <div> Merge...</div>
      <%= hidden_field_tag :id, equipment_category.id %>
      <%= render 'show', equipment_category: equipment_category %>
    </div>
    <div style="display: table-cell; border: 1px solid black; padding: 3px; width: 40%">
      into...
      <%= select_tag(:merge_into_equipment_category_id, options_from_collection_for_select(selection_list, :id, :name) ) %>

      <div style="padding: 15px;">
        Equipment Types will be moved to the new Equipment Categories. Random Equipment Profiles will be discarded.
      </div>
    </div>
  </div>
  <div>
    <%= submit_tag "Merge" %>
  </div>
<% end -%>
