<p>
  <strong>Name:</strong>
  <%= equipment_piece.name %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= equipment_piece.quantity %>
</p>

<p>
  <strong>Equipment type:</strong>
  <%= react_component 'QuietLink', { txt: equipment_piece.equipment_type_name, url: url_for(equipment_piece.equipment_type)}, {tag: "span"} %>
</p>

<p>
  <strong>Owned by:</strong>
  <%= react_component( 'QuietLink', { txt: equipment_piece.final_owner.to_s, url: url_for(equipment_piece.final_owner), popupText: equipment_piece.final_owner.to_s}, {tag: "span"}) if equipment_piece.final_owner.present? %>
</p>

<p>
  <strong>Modifiers:</strong>
  <ul>
  <% equipment_piece.equipment_modifiers.each do |equipment_modifier| %>
    <li><%= react_component 'QuietLink', { txt: equipment_modifier.to_s, url: url_for(equipment_modifier)}, {tag: "span"} %></li>
  <% end %>
  </ul>
</p>

<p>
  <strong>Base Cost:</strong>
  <%= humanized_money_with_symbol equipment_piece.base_cost %>
</p>

<p>
  <strong>Base Weight:</strong>
  <%= equipment_piece.base_weight %> lbs.
</p>

<p>
  <strong>Cost:</strong>
  <%= humanized_money_with_symbol equipment_piece.cost %>
</p>

<p>
  <strong>Weight:</strong>
  <%= equipment_piece.weight %> lbs.
</p>

